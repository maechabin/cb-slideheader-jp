{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": false,
    "strictNullChecks": false,
    "target": "es6"
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"]
}
